{
  "extends": [
    "next/core-web-vitals",
    "airbnb-base"
  ],
  "rules": {
    "max-len": "off",
    "arrow-body-style": "off",
    "react/prop-types": "off",
    "import/prefer-default-export": "off",
    "import/extensions": ["error", "always", {
      "js": "never"
    }]
  },
  "settings": {
    "react": { "version": "18.2" },
    "import/resolver": {
      "alias": {
        "map": [["@", "./src"]]
      }
    }
  }
}
